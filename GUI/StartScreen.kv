<StartScreen>:
    MDRelativeLayout:
        #md_bg_color: 0.85, 0.69, 0.48, 1
        orientation: "vertical"
        Image:
            source: "resources/logo.jpg"
            size: 0.5, 0.3
            pos_hint: {"x": 0.0, 'y': 0.6}
        MDLabel:
            text: "Bienvenido al juego de banderas!"
            halign: "center"
            font_style: "H4"
        MDRaisedButton:
            #md_bg_color: 0.48, 0.63, 0.85, 1
            #md_bg_color: 0.85, 0.69, 0.48, 1
            text: "Iniciar Juego"
            size_hint: None, None
            size: "150dp", "50dp"
            pos_hint: {"center_x": 0.5, "y": 0.1}
            on_release: root.change_screen()
        


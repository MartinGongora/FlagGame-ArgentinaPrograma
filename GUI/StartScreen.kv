<StartScreen>:
    MDRelativeLayout:
        orientation: "vertical"
        Image:
            source: "resources/logo.jpg"
            size: 0.5, 0.3
            pos_hint: {"x": 0.0, 'y': 0.6}
        MDLabel:
            text: "Bienvenido al juego de banderas!"
            halign: "center"
            font_name: 'resources/font/stocky.ttf'
            font_size: "35dp"
            color: app.theme_cls.primary_color
        MDRaisedButton:
            text: "Iniciar Juego"
            size_hint: None, None
            size: "150dp", "50dp"
            pos_hint: {"center_x": 0.5, "y": 0.1}
            on_release: root.change_screen()
        


<FlagScreen>:
    MDBoxLayout:
        orientation: "vertical"
        AsyncImage:
            source: root.country_flag
        MDTextField:
            id: id_text_field
            hint_text: "Nombre del pais"
            on_text: root.answer = self.text
        MDRaisedButton: 
            on_release: root.check_answer(id_text_field)
        MDLabel:
            text: root.timer_label


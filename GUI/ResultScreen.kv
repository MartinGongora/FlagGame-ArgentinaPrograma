<ResultScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: ["0dp", "0dp", "0dp", "20dp"]
        MDLabel:
            halign: "center"
            size_hint: 1, 0.13
            text: "Tu puntaje es:"
            md_bg_color: app.theme_cls.primary_color
            color: 0, 0, 0, 1
            font_name: 'resources/font/stocky.ttf'
            font_size: "25dp"
        MDLabel:
            md_bg_color: app.theme_cls.primary_color
            halign: "center"
            size_hint: 1, 0.12
            text: root.score
            color: 0, 0, 0, 1
            font_name: 'resources/font/stocky.ttf'
            font_size: "25dp"
        ScrollView:
            size_hint: 1, 0.75
            MDList:
                id: results_list 
                size_hint_y: None 
                height: self.minimum_height
        MDRaisedButton:
            text: "Volver a jugar"
            size: "150dp", "50dp"
            on_release: 
                root.change_screen()
            pos_hint: {"center_x": 0.5, "y": 0.05}

